{
	"$id": "https://blamehannah.com/data-schema.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"definitions": {
		"source": {
			"enum": [
				"twitter",
				"reddit"
			],
			"type": "string"
		},
		"via": {
			"type": "object",
			"required": [
				"name",
				"source",
				"id",
				"date"
			],
			"properties": {
				"name": {"$ref": "#/definitions/name"},
				"source": {
					"oneOf": [
						{"$ref": "#/definitions/source"},
						{
							"const": "youtube"
						}
					]
				},
				"id": {"$ref": "#/definitions/id"},
				"date": {"$ref": "#/definitions/date"}
			}
		},
		"id": {
			"type": "string"
		},
		"date": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"url": {
			"type": "string"
		},
		"author": {
			"oneOf": [
				{
					"type": "string"
				},
				{
					"type": "object",
					"required": [
						"id",
						"name"
					],
					"properties": {
						"id": {"type": "string"},
						"name": {"type": "string"}
					}
				}
			]
		},
		"complex_image": {
			"type": "object",
			"required": [
				"src",
				"alt"
			],
			"properties": {
				"src": {
					"oneOf": [
						{"$ref": "#/definitions/simple_image"},
						{"$ref": "#/definitions/twitter_image"}
					]
				},
				"alt": {"type": "string"}
			}
		},
		"simple_image": {
			"type": "string",
			"pattern": "^https:\/\/.+\\.(jpg|png|webp)$"
		},
		"twitter_image": {
			"type": "string",
			"pattern": "^https:\/\/pbs\\.twimg\\.com/media\/[^\\?]+\\?format=jpg&name=large"
		}
	},
	"oneOf": [
		{
			"type": "object",
			"required": [
				"author",
				"source",
				"screenshot_timestamp",
				"alt",
				"id",
				"title",
				"date",
				"via"
			],
			"properties": {
				"author": {"$ref": "#/definitions/author"},
				"source": {
					"const": "youtube"
				},
				"screenshot_timestamp": {
					"type": "number"
				},
				"alt": {"type": "string"},
				"id": {"$ref": "#/definitions/id"},
				"title": {"$ref": "#/definitions/title"},
				"date": {"$ref": "#/definitions/date"},
				"via": {"$ref": "#/definitions/via"},
				"url": {"$ref": "#/definitions/url"}
			},
			"additionalProperties": false
		},
		{
			"required": [
				"author",
				"source",
				"id",
				"title",
				"date"
			],
			"type": "object",
			"properties": {
				"author": {
					"$ref": "#/definitions/author"
				},
				"source": {
					"$ref": "#/definitions/source"
				},
				"id": {
					"type": "string"
				},
				"title": {
					"type": "string"
				},
				"date": {
					"type": "string"
				},
				"image": {
					"oneOf": [
						{
							"minItems": 1,
							"type": "array",
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/complex_image"
							}
						}
					]
				},
				"via": {
					"$ref": "#/definitions/via"
				}
			},
			"additionalProperties": false
		}
	]
}
