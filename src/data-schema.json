{
	"$id": "https://blamehannah.com/data-schema.json",
	"$schema": "http://json-schema.org/draft-07/schema",
	"required": [
		"author",
		"source",
		"id",
		"title",
		"date"
	],
	"type": "object",
	"definitions": {
		"simple_image": {
			"type": "string",
			"pattern": "^https:\/\/.+\\.(jpg|png|webp)$"
		},
		"twitter_image": {
			"type": "string",
			"pattern": "^https:\/\/pbs\\.twimg\\.com/media\/[^\\?]+\\?format=jpg&name=large"
		}
	},
	"properties": {
		"author": {
			"type": "string"
		},
		"source": {
			"enum": [
				"twitter",
				"reddit"
			],
			"type": "string"
		},
		"id": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"date": {
			"type": "string"
		},
		"image": {
			"oneOf": [
				{"$ref": "#/definitions/simple_image"},
				{"$ref": "#/definitions/twitter_image"},
				{
					"minItems": 1,
					"type": "array",
					"uniqueItems": true,
					"items": {
						"oneOf": [
							{"$ref": "#/definitions/simple_image"},
							{"$ref": "#/definitions/twitter_image"}
						]
					}
				}
			]
		},
		"via": {
			"type": "object",
			"required": [
				"name",
				"source",
				"id",
				"date"
			],
			"properties": {
				"author": {
					"type": "string"
				},
				"source": {
					"enum": [
						"twitter",
						"reddit"
					],
					"type": "string"
				},
				"id": {
					"type": "string"
				},
				"date": {
					"type": "string"
				}
			}
		}
	},
	"additionalProperties": false
}
